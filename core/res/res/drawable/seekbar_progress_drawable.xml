<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingMode="stack" >
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <inset
            android:insetLeft="@dimen/rounded_slider_track_inset"
            android:insetRight="@dimen/rounded_slider_track_inset" >
        <shape android:tint="?android:attr/colorAccent">
           <size android:height="12dp" />
            <solid android:color="#80626161" />
            <corners android:radius="10dp" />
           </shape>
        </inset>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <com.android.internal.graphics.drawable.RoundedCornerProgressDrawable
            android:drawable="@drawable/seekbar_progress"
        />
    </item>
</layer-list>

